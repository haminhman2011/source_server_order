{
  "name": "hieupham0206/cloudteam-metronic",
  "description": "Yii 2 Advanced Project Template by Phạm Quang Hiếu",
  "keywords": [
    "yii2",
    "framework",
    "advanced",
    "project template",
    "cloudteam"
  ],
  "homepage": "https://github.com/hieupham0206/cloudteam-metronic",
  "type": "project",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Phạm Quang Hiếu",
      "email": "phamquanghieu0206@gmail.com",
      "homepage": "https://github.com/hieupham0206"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "yiisoft/yii2": "~2.0.12",
    "yiisoft/yii2-bootstrap": "*",
    "yiisoft/yii2-swiftmailer": "2.0.7",
    "bower-asset/select2": "^4.0",
    "phpoffice/phpexcel": "^1.8",
    "nesbot/carbon": "^1.22",
    "guzzlehttp/guzzle": "^6.3",
    "bower-asset/DataTables": "^1.10",
    "bower-asset/bootstrap-datepicker": "^1.6",
    "bower-asset/toastr": "^2.1",
    "bower-asset/numeral": "^2.0",
    "bower-asset/highcharts": "^5.0",
    "bower-asset/moment": "^2.18",
    "bower-asset/fontawesome": "^4.7",
    "bower-asset/smalot-bootstrap-datetimepicker": "^2.4",
    "bower-asset/bootstrap-daterangepicker": "^2.1",
    "npm-asset/bootbox": "^4.4"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "*",
    "yiisoft/yii2-gii": "*"
  },
  "config": {
    "process-timeout": 1800
  },
  "extra": {
    "asset-installer-paths": {
      "npm-asset-library": "vendor/npm",
      "bower-asset-library": "vendor/bower"
    }
  },
  "scripts": {
    "post-install-cmd": "php init --env=Development --overwrite=n"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
